<div class="row">
  <div class="page-header col-md-12">
    <% if @authors.empty? %>
      <h1>No Authors Created</h1>
    <% else %>
      <h1>All Authors</h1>
    <% end %>
  </div>
</div>

<div class="row">
  <div id="authors-list">
    <% @authors.each do |author| %>
      <div class="well col-md-12">
        <%= author.full_name %>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div id="new-author-link" class="col-md-12">
    <%= link_to "Add New author", new_admin_author_path, class: "btn btn-success btn-lg" %>
  </div>
</div>